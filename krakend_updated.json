{
    "version": 3,
    "name": "My lovely gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "3s",
    "extra_config": {
      "telemetry/logging": {
        "level":  "DEBUG",
        "prefix": "[KRAKEND]",
        "syslog": false,
        "stdout": true
      },
      "telemetry/metrics": {
        "collection_time": "60s",
        "proxy_disabled": false,
        "router_disabled": false,
        "backend_disabled": false,
        "endpoint_disabled": false,
        "listen_address": ":8090"
      },
      "security/cors": {
        "allow_origins": [ "http://192.168.99.100:3000", "http://localhost:3000" ],
        "allow_methods": [ "POST", "GET" ],
        "allow_headers": [ "Origin", "Authorization", "Content-Type" ],
        "expose_headers": [ "Content-Length" ],
        "max_age": "12h"
      },
      "plugin/http-server": {
        "name": ["krakend-custom-response-plugin"],
        "krakend-custom-response-plugin": {
            "some_flag_in_my_plugin": true
        }
      }
    },
    "plugin": {
        "pattern":".so",
        "folder": "./plugins/"
    },
    
    "endpoints": [
        {
            "endpoint": "/hello_world",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "encoding": "no-op",
                    "host": [
                        "http://127.0.0.1:3000"
                    ],
                    "url_pattern": "/hello_world"
                }
            ]
        },
        {
            "endpoint": "/success",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "encoding": "no-op",
                    "host": [
                        "http://127.0.0.1:3000"
                    ],
                    "url_pattern": "/success"
                }
            ]
        }
    ]
}
